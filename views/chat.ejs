<% if (currentUser) {%>
    <h1>Chat</h1>
    <form id="chatForm">
        <input id="chat-input" type="text">
        <input type="submit" class="button" value="Send">
        <input id="chat-user-id" type="hidden" value="<%= currentUser._id %>">
        <input id="chat-user-name" type="hidden" value="<%= currentUser.fullName %>">
    </form>
    <div id="chat"></div>
    <% } %>